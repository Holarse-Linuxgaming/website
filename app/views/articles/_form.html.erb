<%= form_for(@article, html: { class: "sky-form" }) do |t| %>
    <fieldset>
      <section>
        <%= t.label 'Titel', class: "label" %>
        <%= t.label nil, class: "input" do %>
            <%= t.text_field :title, placeholder: "Titel" %>
        <% end %>
      </section>
      <section>
        <%= t.label 'Alternativnamen', class: "label" %>
        <%= t.label nil, class: "input" do %>
            <%= t.text_field :alternatives, placeholder: "Alternativnamen kommasepariert" %>
        <% end %>
      </section>
      <section>
        <%= t.label 'Inhalt', class: "label" %>
        <%= t.label nil, class: "textarea textarea-resizable" do %>
            <%= t.text_area :content, placeholder: 'Artikel hier eingeben...', rows: 15, class: "editor" %>
        <% end %>
      </section>
      <section>
        <%= t.button :submit, class: "btn-u btn-u-primary" do %>
            <i class="fa fa-save"></i> Speichern
        <% end %>
      </section>

    </fieldset>
<% end %>