PUT /articles
{
  "settings": {
    "analysis": {
        "analyzer" : {
                "default": {
                    "type" : "german"
                }
        }
    }
  },
  "mappings": {
    "docs": { 
      "properties": { 
        "title":                  { "type": "text"  }, 
        "alternativeTitles":      { "type": "text"  }, 
        "tags":                   { "type": "keyword" },  
        "content":                { "type": "text" },
        "url":                    { "type": "text", "index": false },
        "searchable":             { "type": "boolean" },
        "views":                  { "type": "integer" }
      }
    }
  }
}

PUT /news
{
  "settings": {
    "analysis": {
        "analyzer" : {
                "default": {
                    "type" : "german"
                }
        }
    }
  },
  "mappings": {
    "docs": { 
      "properties": { 
        "title":                  { "type": "text"  }, 
        "subtitle":               { "type": "text"  }, 
        "category":               { "type": "keyword" },
        "content":                { "type": "text" },
        "comments":               { "type": "text" },
        "url":                    { "type": "text", "index": false },                
        "searchable":             { "type": "boolean" }
      }
    }
  }
}

PUT /tags
{
  "mappings": {
    "docs": { 
      "properties": { 
        "taggroup":               { "type": "keyword"  }, 
        "tags":                   { "type": "keyword"  }
      }
    }
  }
}

-- query
    
    GET articles,news/_search
{
  "query": {
    "multi_match": {
      "query": "hallo mars",
      "fields": ["title^10", "subtitles^7", "alternativeTitles^7", "tags", "content^5"]
    }
  }
}