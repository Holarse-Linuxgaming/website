PUT /documents
{
  "settings": {
    "analysis": {
      "filter": {
        "german_stop": {
          "type":       "stop",
          "stopwords":  "_german_" 
        },
        "german_keywords": {
          "type":       "keyword_marker",
          "keywords":   [] 
        },
        "german_stemmer": {
          "type":       "stemmer",
          "language":   "light_german"
        }
      },
      "analyzer": {
        "folding": {
          "tokenizer": "standard",
          "filter":  [ 
            "lowercase", 
            "german_stop",
            "german_keywords",
            "german_normalization",
            "german_stemmer" ]
        }
      }
    }
  },
  "mappings": {
    "docs": { 
      "properties": { 
        "title":                  { "type": "text"  }, 
        "alternativeTitles":      { "type": "text"  }, 
        "tags":                   { "type": "keyword" },  
        "content":                { "type": "text" },
        "url":                    { "type": "text", "index": false },
        "type":                   { "type": "text", "index": false }
      }
    }
  }
}