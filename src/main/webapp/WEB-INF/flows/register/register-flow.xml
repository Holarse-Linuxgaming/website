<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
   
    <var name="registerCommand" class="de.holarse.web.register.RegisterCommand" />

    <view-state id="register" view="register/form" model="registerCommand">
        <transition on="register" to="create-account" />
    </view-state>
    
    <action-state id="create-account">
        <evaluate expression="registerService.createAccount(registerCommand)" />
        <transition to="done" />
    </action-state>
    
    <end-state id="done" view="register/done" />
   
    
</flow>