<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
          "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
          "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
  <!--
    Main definition that uses layout.html to put title and content attributes from
    Thymeleaf fragments; {1} will be evaluated to either 'list', 'form' or 'view'.
  -->
  <definition name="/*/*" template="layout/application">
      <put-attribute name="header" value="fragments/header" />
      <put-attribute name="content" value="{1}/{2}" />
      <put-attribute name="footer" value="fragments/footer" />
  </definition>
  
</tiles-definitions>