<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
 
<tiles-definitions>  
  
   <!-- Base Definition -->
   <definition name="base-definition" template="/WEB-INF/layouts/application/basic.jsp">  
       <put-attribute name="title" value="" />  
       <put-attribute name="header" value="/WEB-INF/layouts/application/header.jsp" />  
       <put-attribute name="body" value="" />  
       <put-attribute name="footer" value="/WEB-INF/layouts/application/footer.jsp" />
   </definition>  
 
   <!-- all pages -->
   <definition name="*" extends="base-definition">  
       <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />  
   </definition>  
  
</tiles-definitions>